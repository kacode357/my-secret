<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <title>My Secret</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/images/logo.png" type="image/png" />
    <link rel="stylesheet" href="/styles/main.css" />
    <link rel="stylesheet" href="/styles/login.css" />
  </head>
  <body class="login-body">
    <div class="login-card">
      <h1 class="login-title">Đăng nhập</h1>

      <% if (error) { %>
        <div class="login-error"><%= error %></div>
      <% } %>

      <form id="loginForm" method="POST" action="/login">
        <div class="login-field">
          <label class="login-label" for="identifier">Username hoặc Email</label>
          <input
            class="login-input"
            type="text"
            id="identifier"
            name="identifier"
            placeholder="username hoặc email"
            required
          />
        </div>

        <div class="login-field">
          <label class="login-label" for="password">Mật khẩu</label>
          <input
            class="login-input"
            type="password"
            id="password"
            name="password"
            placeholder="••••••"
            required
          />
        </div>

        <button
          type="submit"
          id="btnLogin"
          class="btn btn-primary btn-block"
          style="margin-top: 6px;"
        >
          Đăng nhập
        </button>
      </form>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", function() {
        const form = document.getElementById("loginForm");
        const btn = document.getElementById("btnLogin");

        form.addEventListener("submit", function(e) {
          // Kiểm tra xem form có hợp lệ không (đã điền đủ thông tin chưa)
          if (form.checkValidity()) {
            // Đổi nội dung nút
            btn.innerHTML = 'Đang đăng nhập...';
            
            // Vô hiệu hóa nút để chống spam click
            // Lưu ý: Việc disable sẽ diễn ra sau khi sự kiện submit bắt đầu
            // nên form vẫn sẽ được gửi đi bình thường.
            btn.style.opacity = "0.7";
            btn.style.cursor = "not-allowed";
            
            // Sử dụng setTimeout nhỏ để đảm bảo form submit được kích hoạt trước khi disable hẳn
            setTimeout(() => {
                btn.disabled = true;
            }, 0);
          }
        });
      });
    </script>
  </body>
</html>